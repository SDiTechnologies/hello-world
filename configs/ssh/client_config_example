    HostName DOMAIN-OR-IP-ADDRESS
    Port PORT # DEFAULT 22
    User USERNAME
    PubKeyAuthentication yes
    IdentityFile ~/.ssh/CERTIFICATE_NAME
    IdentitiesOnly yes

